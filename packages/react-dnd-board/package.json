{
  "name": "react-dnd-board",
  "version": "0.0.3",
  "description": "基于 @hello-pangea/dnd 的 React 拖拽组件库，提供开箱即用的面板和列表组件",
  "keywords": [
    "react",
    "drag-and-drop",
    "dnd",
    "kanban",
    "board",
    "list",
    "hello-pangea"
  ],
  "author": "Nacho.L",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sj-distributor/react-dnd-board"
  },
  "homepage": "https://github.com/sj-distributor/react-dnd-board#readme",
  "bugs": {
    "url": "https://github.com/sj-distributor/react-dnd-board/issues"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "build": "tsc --build && vite build",
    "publish": "npm run build && npm publish",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@hello-pangea/dnd": "^18.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@react-dnd-board/shared": "*",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "jsdom": "^27.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "unplugin-dts": "^1.0.0-beta.6",
    "vite": "^7.2.6",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vitest": "^4.0.15"
  }
}
